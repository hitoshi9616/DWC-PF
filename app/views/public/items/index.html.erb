<div class="container">

  <h2 class="mt-3">商品一覧</h2>

  <div class="d-flex flex-wrap mt-3">
    <% @items.each do |item| %>
    <div>
      <%= link_to item_path(item.id) do %>
        <div class="card">
          <%= image_tag item.get_image(100, 100), size: "200x150", class:"card-img-top" %>
          <div class="card-body">
            <p class="card-text text-wrap">
              <%= item.name %><br />
              <%= item.price %>円<br />
              レビュー数：<%= item.review.count %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
