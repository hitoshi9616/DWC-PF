<!--ゲストログイン時の機能制限のための確認-->
<% if current_customer.email == 'guest@example.com' %>
  <h2 class="mt-3">投稿一覧</h2>
<% else %>
  <div class="row mt-3">
    <h2 class="col-lg-5">投稿一覧</h2>


    <% if @genres.count >= 1 %>
      <p class="col-lg-5 ml-3"><%= link_to "新規投稿画面へ", new_post_path, class:"btn btn-success" %></p>
    <% end %>
  </div>
<% end %>

<% if @posts.count >= 1 %>
  <table class="table">
    <thead>
      <tr>
        <th>投稿の種類</th>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>コメント数</th>
        <th>投稿年_日_時</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.genre.genre %></td>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= post.title %>
            <% end %>
          </td>
          <td>
            <%= link_to customer_path(post.customer_id) do %>
              <%= post.customer.nickname %>
            <% end %>
          </td>
          <td><%= post.post_comments.count %></td>
          <td><%= post.created_at.strftime("%Y_%m/%d_%H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>投稿はありません</h4>
<% end %>
