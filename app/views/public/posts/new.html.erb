<% if @genres.count >= 1 %>
  <h2 class="mt-3">新規投稿</h2>

  <%= form_with model: @post, class:"mt-3" do |f| %>
    <div class="row form-group col-lg-8 col-md-10 col-sm-12">
      <%= f.label :title, "タイトル", class:"col-lg-2 col-md-3 col-sm-3 mr-4" %>
      <%= f.text_field :title, required: true, class:"col-lg-4 col-md-5 col-sm-8 form-control" %>
    </div>

    <div class="row form-group col-lg-8 col-md-10 col-sm-12">
      <%= f.label :text, "投稿内容", class:"col-lg-2 col-md-3 col-sm-3 mr-4" %>
      <%= f.text_area :text, class:"col-lg-8 col-md-8 col-sm-8 form-control" %>
    </div>

    <div class="row form-group col-lg-8 col-md-10 col-sm-12">
      <%= f.label :genre_id, "投稿の種類", class:"mr-5" %>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre) %>
    </div>

    <div class="row offset-2">
      <%= f.submit "投稿する", class:"btn btn-success mt-2" %>
    </div>
  <% end %>
<% else %>
  <h2 class="text-center mt-3">投稿機能は準備中です しばらくお待ちください</h2>
<% end %>
