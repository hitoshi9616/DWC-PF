<% if @genres.count >= 1 %>
  <h2 class="mt-3">新規投稿</h2>

  <%= form_with model: @post, class:"mt-3" do |f| %>
    <div class="row form-group col-lg-8">
      <%= f.label :title, "タイトル", class:"mr-4" %>
      <%= f.text_field :title, required: true, class:"col-3 form-control" %>
    </div>

    <div class="row form-group col-lg-8">
      <%= f.label :text, "投稿内容", class:"mr-4" %>
      <%= f.text_area :text, class:"col-7 form-control" %>
    </div>

    <div class="row form-group col-lg-8">
      <%= f.label :genre_id, "投稿の種類", class:"mr-2" %>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre) %>
    </div>

    <div class="row offset-1">
      <%= f.submit "投稿する", class:"btn btn-success mt-2" %>
    </div>
  <% end %>
<% else %>
  <h2 class="text-center mt-3">現在投稿機能準備中です</h2>
<% end %>
