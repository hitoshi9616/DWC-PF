<div class="container">

  <h2 class="mt-3">レビュー編集</h2>

  <div class="row">
    <div class="col-lg-4">
      <h5 class="col text-center">レビューする商品</h5>
      <div class="card">
        <%= image_tag @review.item.get_image(200, 200), class:"card-img-top" %>
        <div class="p-2">
          <p><%= @review.item.name %></p>
          <p>価格：<%= @review.item.price %>円</p>
          <p><%= @review.item.introduction %></p>
        </div>
      </div>
    </div>

    <div class="col-lg-7 ml-2">
    <%= form_with model: @review do |f| %>
      <div class="row col">
        <div class="row col-lg-12 form-group">
          <div class="col-lg-12">
            <strong><%= f.label :"レビュータイトル" %></strong>
          </div>

          <div class="col-lg-12">
            <%= f.text_field :title, class:"form-control col-lg-6" %>
          </div>
        </div>

        <div class="row col-lg-12 form-group">
          <div class="col-lg-2">
            <strong><%= f.label :evaluation, "評価" %></strong>
            <%= f.hidden_field :evaluation, id: :review_star %>
          </div>
          <div id="star"></div>
          <%# ★で評価するための記述 %>
          <script>
        　$('#star').empty();
          $('#star').raty({
            size : 36,
            starOff: '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            scoreName: 'review[evaluation]',
            half: false,
            score:<%= @review.evaluation %>,
          });
          </script>
        </div>

        <div class="row col-lg-12 form-group mt-2">
          <div class="col-lg-12">
            <strong><%= f.label :"レビュー内容" %></strong>
          </div>

          <div class="col-lg-12">
            <%= f.text_area :text, class:"col-lg-12 form-control" %>
          </div>
        </div>

        <%# どの商品に対してのレビューかを引き継ぐ %>
        <%= f.hidden_field :item_id, :value => @review.item_id %>

        <div class="col-lg-12 text-center mt-3">
          <%= f.submit "編集完了", class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

</div>
