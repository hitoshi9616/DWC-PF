<div class="container">

  <%= form_with model: review do |f| %>
    <div class="row">
      <%= f.label :evaluation, "評価" %>
      <%= f.hidden_field :evaluation, id: :review_star %>
      <%# ★で評価するための記述 %>
      <div id="star"></div>
      <script>
      $('#star').empty();
      $('#star').raty({
        size: 36,
        starOff: '<%= asset_path('star-off.png') %>',
        starOn: '<%= asset_path('star-on.png') %>',
        scoreName: 'review[evaluation]',
        half: false,
      });
      </script>
    </div>

    <div>
      <%= f.label :"レビュータイトル" %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :"レビュー内容" %><br />
      <%= f.text_area :text %>
    </div>

    <%# どの商品に対してのレビューか分かるように紐づける %>
    <%= f.hidden_field :item_id, :value => item.id %>

    <div>
      <%= f.submit "レビュー投稿" %>
    </div>
  <% end %>

</div>
