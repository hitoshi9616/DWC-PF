<div class="container">

  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"名前" %><br />
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, :placeholder => "大谷", autofocus: true, required: true %><br />
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name, :placeholder => "翔平", autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :"フリガナ" %><br />
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, :placeholder => "オオタニ", autofocus: true %><br />
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana, :placeholder => "ショウヘイ", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"ニックネーム" %><br />
      <%= f.text_field :nickname, :placeholder => "オオタニサン", autofocus: true %>
      <%= f.label :"※公開される名前になります" %>
    </div>

    <div class="field">
      <%= f.label :"電話番号（ハイフンなし）" %>
      <%= f.text_field :phone_number, :placeholder => "09012345678", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"年齢" %>
      <%= f.text_field :age, :placeholder => "25", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, :placeholder => "sample@gmail.com", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
      <em>（<%= @minimum_password_length %> 文字以上）</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "登録", class:"btn btn-success" %>
    </div>
  <% end %>

  <%= link_to "登録済みの方はこちら", new_customer_session_path %>

</div>
