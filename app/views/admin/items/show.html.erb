<div class="container">

  <h2>商品詳細</h2>

  <div class="row">
    <div class="col-lg-5">
      <%= image_tag @item.get_image(200, 200) %>
      <div class="mt-2">
        <%= @item.name %>
        <%= @item.price %>円
      </div>
    </div>

    <div class="col-lg-6">
      <% if @item.review.count >= 1 %>
        <% @reviews.each do |review| %>
          <div>
            <%# ★で評価するための記述 %>
            <div id="star<%= review %>"></div>
            <script>
              $('#star<%= review %>').empty();
              $('#star<%= review %>').raty({
                size: 36,
                starOff: '<%= asset_path('star-off.png') %>',
                starOn: '<%= asset_path('star-on.png') %>',
                half: false,
                readOnly: true,
                score:<%= review.evaluation %>
              });
            </script>
          </div>
        <% end %>
      <% else %>
        <h5>この商品はまだレビューがありません</h5>
      <% end %>
    </div>

    <div class="col-lg-5 mt-2">
      <%= link_to "商品編集", edit_admin_item_path(@item.id), class:"mr-2 btn btn-primary" %>
      <%= link_to "商品削除", admin_item_confirm_path(@item.id), class:"btn btn-danger" %>
    </div>
  </div>

</div>
