<div class="container">

  <h2>商品詳細</h2>

  <div class="row">
    <div class="col-lg-5">
      <%= image_tag @item.get_image(200, 200) %>
      <div class="mt-2">
        <div>
          <%= @item.name %>
        </div>
        <div class="mt-2">
          <%= @item.price %>円
        </div>
        <div class="mt-2">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="mt-3">
        <%= link_to "商品編集", edit_admin_item_path(@item.id), class:"mr-2 btn btn-primary" %>
        <%= link_to "商品削除", admin_item_confirm_path(@item.id), class:"btn btn-danger" %>
      </div>
    </div>

    <div class="col-lg-6">
      <% if @item.review.count >= 1 %>
        <% @reviews.each do |review| %>
          <div class="row mt-2">
            <div class="col-lg-4 offset-1">
              <strong><%= review.title %></strong>
            </div>
            <%# ★で評価するための記述 %>
            <div class="row col-lg-6 offset-lg-1">
              評価：
              <div id="star<%= review.id %>"></div>
              <script>
                $('#star<%= review.id %>').empty();
                $('#star<%= review.id %>').raty({
                  size: 36,
                  starOff: '<%= asset_path('star-off.png') %>',
                  starOn: '<%= asset_path('star-on.png') %>',
                  half: false,
                  readOnly: true,
                  score:<%= review.evaluation %>
                });
              </script>
            </div>
            <div class="col-lg-12 mt-3"><%= review.text %></div>
          </div>
        <% end %>
      <% else %>
        <h5>この商品はまだレビューがありません</h5>
      <% end %>
    </div>
  </div>

</div>
