<div class="container">

  <h2>商品編集</h2>

  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <div>
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div>
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, required: true %>
    </div>

    <div>
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, required: true %>
    </div>

    <div>
    <%= f.label :price, "販売価格" %>
    <%= f.text_field :price, required: true %>円
    </div>

    <%= f.submit '編集完了' %>
  <% end %>

</div>
