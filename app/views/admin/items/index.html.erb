<div class="container">

  <div class="row">
    <h2 class="col-lg-8">商品一覧</h2>

    <h4 class="col-lg-4">
      <%= link_to "商品登録", new_admin_item_path, class:"btn btn-success" %>
    </h4>

    <div class="d-flex flex-wrap mt-3">
      <% @items.each do |item| %>
      <div>
        <%= link_to admin_item_path(item.id) do %>
          <div class="mr-3">
            <%= image_tag item.get_image(100, 100) %>
            <div>
              <p>
                <%= item.name %><br />
                <%= item.price %>円<br />
                レビュー数：<%= item.review.count %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

</div>
