<div class="container">

  <div class="row">
    <h2>商品一覧</h2>

    <h4>
      <%= link_to "商品登録", new_admin_item_path %>
    </h4>
  </div>

  <div>
    <% @items.each do |item| %>
    <div>
      <%= link_to admin_item_path(item.id) do %>
        <div class="row">
          <%= image_tag item.get_image(100, 100) %>
          <div>
            <%= item.name %><br />
            <%= item.price %>円<br />
            レビュー数：<%= item.review.count %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
