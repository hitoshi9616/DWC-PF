<div class="container">

  <h2>商品登録</h2>

  <%= form_with model: @item, url: admin_items_path, class:"mt-3" do |f| %>
    <div class="row form-group col-8">
      <%= f.label :image, "商品画像", class:"mr-2" %>
      <%= f.file_field :image, accept: "image/*", required: true %>
    </div>

    <div class="row form-group col-8">
      <%= f.label :name, "商品名", class:"mr-4" %>
      <%= f.text_field :name, required: true, class:"col-4 form-control" %>
    </div>

    <div class="row form-group col-8">
      <%= f.label :introduction, "商品説明", class:"mr-2" %>
      <%= f.text_area :introduction, required: true, class:"col-9 form-control" %>
    </div>

    <div class="row form-group col-8">
      <%= f.label :price, "販売価格", class:"mr-2" %>
      <%= f.text_field :price, required: true, class:"col-2 form-control" %>円
    </div>

    <div class="row justify-content-center">
      <%= f.submit '商品登録', class:"btn btn-success col-2" %>
    </div>
  <% end %>

</div>
