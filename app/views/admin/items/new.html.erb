<div class="container">

  <h2>商品登録</h2>

  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*", required: true %>
    </div>

    <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, required: true %>
    </div>

    <div class="form-group">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, required: true %>
    </div>

    <div class="form-group">
    <%= f.label :price, "販売価格" %>
    <%= f.text_field :price, required: true %>円
    </div>

    <%= f.submit '商品登録' %>
  <% end %>

</div>
