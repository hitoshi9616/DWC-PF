<div class="card col mt-4">
  <div class="row card-title border-bottom">
    <div class="border col-lg-7 col-md-12 col-sm-12 text-center p-2">
      <%= comment.customer.nickname %>
    </div>

    <div class="border col-lg-5 col-md-12 col-sm-12 text-center p-2">
      <%= comment.created_at.strftime("%Y_%m/%d_%H:%M") %>
    </div>
  </div>
  <p class="card-text p-1"><%= comment.comment %></p>
</div>
