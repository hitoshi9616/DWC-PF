<div class="row mt-3">
  <h2 class="col-lg-5">投稿一覧</h2>
  <p class="col-lg-5 ml-3"><%= link_to "投稿コメント一覧へ", admin_post_comments_path, class:"btn btn-info" %></p>
</div>

<% if @posts.count >= 1 %>
  <table class="table">
    <thead>
      <tr>
        <th>投稿の種類</th>
        <th>タイトル</th>
        <th>分析スコア</th>
        <th>投稿者</th>
        <th>コメント数</th>
        <th>投稿年_日_時</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.genre.genre %></td>
        <td>
          <%= link_to admin_post_path(post.id), class:"text-dark" do %>
            <%= post.title %>
          <% end %>
        </td>
        <td>
          <% if post.score != nil %>
            <strong>
            <% if post.score >= 0.4 %>
              <span class="text-success"><%= post.score %></span>
            <% elsif post.score <= -0.4 %>
              <span class="text-danger"><%= post.score %></span>
            <% else %>
              <%= post.score %>
            <% end %>
            </strong>
          <% end %>
        </td>
        <td>
          <%= link_to admin_customer_path(post.customer_id), class:"text-dark" do %>
            <%= post.customer.nickname %>
          <% end %>
        </td>
        <td><%= post.post_comments.count %></td>
        <td><%= post.created_at.strftime("%Y_%m/%d_%H:%M") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>投稿はありません</h4>
<% end %>
