<div class="container">

  <h2 class="mt-3">会員一覧</h2>

  <table class="table mt-3">
    <thead>
      <tr>
        <th>ニックネーム</th>
        <th>投稿数</th>
        <th>レビュー数</th>
        <th>会員ステータス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td>
            <%= link_to admin_customer_path(customer.id), class:"text-dark" do %>
              <%= customer.nickname %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_posts_path, class:"text-dark" do %>
              <%= customer.posts.count %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_reviews_path, class:"text-dark" do %>
              <%= customer.reviews.count %>
            <% end %>
          </td>
          <% if customer.is_deleted == false %>
            <td>有効</td>
          <% else %>
            <td>退会</td>
          <% end %>
        </tr>
      </tbody>
    <% end %>
  </table>
  
</div>
