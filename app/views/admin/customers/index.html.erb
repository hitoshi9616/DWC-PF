<h2 class="mt-3">会員一覧</h2>

<% if @customers.count >= 1 %>
  <table class="table mt-3">
    <thead>
      <tr>
        <th class="col-lg-4 col-md-4 col-sm-3">ニックネーム</th>
        <th class="col-lg-2 col-md-2 col-sm-2">投稿数</th>
        <th class="col-lg-3 col-md-3 col-sm-3">レビュー数</th>
        <th class="col-lg-3 col-md-3 col-sm-4">会員ステータス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_customer_path(customer), class:"text-dark" do %>
            <%= customer.nickname.truncate(8, separator: "...") %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_customer_posts_path(customer), class:"text-dark" do %>
            <%= customer.posts.count %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_customer_reviews_path(customer), class:"text-dark" do %>
            <%= customer.reviews.count %>
          <% end %>
        </td>
        <% if customer.is_deleted == false %>
          <td class="text-success">有効</td>
        <% else %>
          <td class="text-danger">退会</td>
        <% end %>
      </tr>
    </tbody>
    <% end %>
  </table>
<% else %>
  <h4>会員が登録されていません</h4>
<% end %>
