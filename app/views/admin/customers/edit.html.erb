<h2 class="mt-3">
  会員詳細情報 / ステータス編集
</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, class:"mt-3" do |f| %>
  <div class="row field form-group">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label "名前" %>
    </div>

    <div class="row col-lg-3 col-md-7 col-sm-7">
      <p class="ml-3"><%= @customer.last_name %></p>
      <p class="ml-3"><%= @customer.first_name %></p>
    </div>
  </div>

  <div class="row field form-group">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label "フリガナ" %>
    </div>

    <div class="row col-lg-3 col-md-7 col-sm-7">
      <p class="ml-3"><%= @customer.last_name_kana %></p>
      <p class="ml-3"><%= @customer.first_name_kana %></p>
    </div>
  </div>

  <div class="row field form-group">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label :nickname, "ニックネーム" %>
    </div>

    <div class="row col-lg-6 col-md-7 col-sm-7">
      <p class="ml-3"><%= @customer.nickname %></p>
    </div>
  </div>

  <div class="row field form-group">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
    </div>

    <div class="row col-lg-6 col-md-7 col-sm-7">
      <p class="ml-3"><%= @customer.phone_number %></p>
    </div>
  </div>

  <div class="row field form-group">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label :age, "年齢" %>
    </div>

    <div class="row col-lg-6 col-md-7 col-sm-7">
      <p class="ml-3"><%= @customer.age %></p>
    </div>
  </div>

  <div class="row field form-group">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label :email, "メールアドレス" %>
    </div>

    <div class="row col-lg-6 col-md-7 col-sm-7">
      <p class="ml-3"><%= @customer.email %></p>
    </div>
  </div>

  <div class="row field form-group">
    <p class="col-lg-3 col-md-4 col-sm-5 text-right">
      投稿数：
      <%= @customer.posts.count %>
    </p>

    <p class="ml-3">
      レビュー数：<%= @customer.reviews.count %>
    </p>
  </div>

  <div class="row field form-group">
    <p class="col-lg-3 col-md-4 col-sm-5 text-right">登録年/日</p>

    <p class="col-lg-6 col-md-7 col-sm-7"><%= @customer.created_at.strftime("%Y/%m/%d") %></p>
  </div>

  <div class="row field form-group">
    <p class="col-lg-3 col-md-4 col-sm-5 text-right">更新年/日</p>

    <p class="col-lg-6 col-md-7 col-sm-7"><%= @customer.updated_at.strftime("%Y/%m/%d") %></p>
  </div>


  <div class="row field form-group mt-2">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right">
      <%= f.label :"会員ステータス" %>
    </div>

    <div class="form-check">
      <%= f.radio_button :is_deleted, false, required: true, class:"form-check-input" %>
      <%= f.label :is_deleted, "有効" %>
    </div>

    <div class="form-check ml-2">
      <%= f.radio_button :is_deleted, true, required: true, class:"form-check-input" %>
      <%= f.label :is_deleted, "無効" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3 col-md-4 col-sm-5 text-right offset-1">
      <%= f.submit "編集完了", class:"btn btn-success" %>
    </div>
  </div>
<% end %>
