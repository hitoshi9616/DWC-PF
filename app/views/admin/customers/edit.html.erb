<div class="container">

  <h2 class="mt-3">
    会員詳細情報 / 会員ステータス編集
  </h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, class:"mt-3" do |f| %>
    <div class="row">
      <p>名前：
        <%= @customer.last_name %>
        <%= " " %>
        <%= @customer.first_name %>
      </p>
    </div>

    <div class="row">
      <p>フリガナ：
        <%= @customer.last_name_kana %>
        <%= " " %>
        <%= @customer.first_name_kana %>
      </p>
    </div>

    <div class="row">
      <p>ニックネーム：
        <%= @customer.nickname %>
      </p>
    </div>

    <div class="row">
      <p>電話番号：
        <%= @customer.phone_number %>
      </p>
    </div>

    <div class="row">
      <p>
        年齢：
        <%= @customer.age %>
      </p>
    </div>

    <div class="row">
      <p>
        メールアドレス：
        <%= @customer.email %>
      </p>
    </div>

    <div class="row">
      <p>
        投稿数：
        <%= @customer.posts.count %>
      </p>
    </div>

    <div class="row">
      <p>
        レビュー数：<%= @customer.reviews.count %>
      </p>
    </div>

    <div class="row">
      <%= f.label :"会員ステータス：" %>
      <div class="form-check">
        <%= f.radio_button :is_deleted, false, required: true, class:"form-check-input" %>
        <%= f.label :is_deleted, "有効" %>
      </div>
      <div class="form-check ml-2">
        <%= f.radio_button :is_deleted, true, required: true, class:"form-check-input" %>
        <%= f.label :is_deleted, "無効" %>
      </div>
    </div>

    <div class="row">
      <%= f.submit "編集完了", class:"btn btn-success mx-auto" %>
    </div>
  <% end %>

</div>
