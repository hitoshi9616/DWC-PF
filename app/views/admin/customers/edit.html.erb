<div class="container">

  <h2 class="mt-3">
    会員詳細情報 / 会員ステータス編集
  </h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, class:"mt-3" do |f| %>
      <div class="row field form-group">
        <div class="col-lg-3 text-right">
          <%= f.label "名前" %>
        </div>
        <div class="row col-lg-3">
          <p class="ml-4">(姓)</p>
          <p class="ml-3"><%= @customer.last_name %></p>
        </div>
        <div class="row col-lg-3">
          <p class="ml-3">(名)</p>
          <p class="ml-3"><%= @customer.first_name %></p>
        </div>
      </div>

      <div class="row field form-group">
        <div class="col-lg-3 text-right">
          <%= f.label "フリガナ" %>
        </div>
        <div class="row col-lg-3">
          <p class="ml-3">(セイ)</p>
          <p class="ml-3"><%= @customer.last_name_kana %></p>
        </div>
        <div class="row col-lg-3">
          <p class="ml-3">(メイ)</p>
          <p class="ml-3"><%= @customer.first_name_kana %></p>
        </div>
      </div>

      <div class="row field form-group">
        <div class="col-lg-3 text-right">
          <%= f.label :nickname, "ニックネーム" %>
        </div>
        <div class="row col-lg-6 ml-5">
          <p class="ml-3"><%= @customer.nickname %></p>
        </div>
      </div>

      <div class="row field form-group">
        <div class="col-lg-3 text-right">
          <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
        </div>
        <div class="row col-lg-6 ml-5">
          <p class="ml-3"><%= @customer.phone_number %></p>
        </div>
      </div>

      <div class="row field form-group">
        <div class="col-lg-3 text-right">
          <%= f.label :age, "年齢" %>
        </div>
        <div class="row col-lg-6 ml-5">
          <p class="ml-3"><%= @customer.age %></p>
        </div>
      </div>

      <div class="row field form-group">
        <div class="col-lg-3 text-right">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="row col-lg-6 ml-5">
          <p class="ml-3"><%= @customer.email %></p>
        </div>
      </div>

    <div class="row">
      <p class="col-lg-3 text-center offset-1">
        投稿数：
        <%= @customer.posts.count %>
      </p>
      <p class="col-lg-3 text-center">
        レビュー数：<%= @customer.reviews.count %>
      </p>
    </div>

    <div class="row field form-group">
      <div class="col-lg-3 text-right">
        <%= f.label :"会員ステータス" %>
      </div>
      <div class="form-check">
        <%= f.radio_button :is_deleted, false, required: true, class:"form-check-input" %>
        <%= f.label :is_deleted, "有効" %>
      </div>
      <div class="form-check ml-2">
        <%= f.radio_button :is_deleted, true, required: true, class:"form-check-input" %>
        <%= f.label :is_deleted, "無効" %>
      </div>
    </div>

    <div class="row">
      <%= f.submit "編集完了", class:"btn btn-success mx-auto" %>
    </div>
  <% end %>

</div>
