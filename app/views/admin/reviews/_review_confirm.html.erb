<div class="card mt-2">
  <h6 class="card-title p-1">
    タイトル：<strong><%= review.title %></strong>
  </h6>

  <div class="row p-1">
    <p class="ml-3">評価：</p>
    <%= render 'admin/reviews/star', review: review %>
  </div>

  <div class="card-text p-2"><strong>内容</strong>
    <p class="p-1"><%= review.text %></p>
  </div>
</div>

<p class="col text-right mt-3">
  投稿日時
  <%= review.updated_at.strftime("%Y_%m/%d_%H:%M") %>
</p>
