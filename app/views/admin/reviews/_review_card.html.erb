<div class="col card">
  <div class="row">
    <div class="col-lg-11 col-md-11 col-sm-11 card-title ml-2 p-2">
      <strong><%= review.title %></strong>
    </div>

    <div class="row col-lg-11 col-md-11 col-sm-11 text-right ml-2">
      <%= render 'admin/reviews/star', review: review %>
    </div>
  </div>

  <div class="card-text p-2">
    <p class="p-1"><%= review.text %></p>
  </div>
</div>

<p class="col-lg-12 col-md-12 col-sm-12 text-right mt-3">
  投稿日時
  <%= review.updated_at.strftime("%Y_%m/%d_%H:%M") %>
</p>
