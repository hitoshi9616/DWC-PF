<h2 class="mt-3">レビュー詳細</h2>

<div class="row">
  <div class="col-lg-4">
    <div class="card">
      <%= image_tag @review.item.get_image(200, 200), class:"card-img-top" %>
      <div class="p-2">
        <p><%= @review.item.name %></p>
        <p>価格：<%= @review.item.price %>円</p>
        <p><%= @review.item.introduction %></p>
      </div>
    </div>
  </div>

  <div class="col-lg-7 ml-2">
    <h5 class="col text-center mt-2">投稿者：
      <%= link_to admin_customer_path(@review.customer.id), class:"text-dark" do %>
        <strong><%= @review.customer.nickname %></strong>
      <% end %>
    </h5>

    <div class="col card">
      <div class="row">
        <div class="col card-title p-1">
          タイトル：<strong><%= @review.title %></strong>
        </div>

        <div class="row col text-right">
          評価：
          <%# ★で評価するための記述 %>
          <div id="star<%= @review.id %>"></div>
          <script>
            $('#star<%= @review.id %>').empty();
            $('#star<%= @review.id %>').raty({
              size: 36,
              starOff: '<%= asset_path('star-off.png') %>',
              starOn: '<%= asset_path('star-on.png') %>',
              half: false,
              readOnly: true,
              score:<%= @review.evaluation %>
            });
          </script>
        </div>
      </div>

      <div class="card-text p-2">
        <strong>内容</strong>
        <p class="p-1"><%= @review.text %></p>
      </div>
    </div>

    <p class="col text-right mt-3">
      投稿日時
      <%= @review.updated_at.strftime("%Y_%m/%d_%H:%M") %>
    </p>

    <div class="col text-center mt-4">
      <%= link_to "削除画面へ", admin_review_confirm_path(@review.id), class:"btn btn-danger" %>
    </div>

    <div class="mt-5">
      <h5 class="text-center">
        コメント件数：<%= @review.review_comments.count %>
      </h5>

      <% if @review.review_comments.count >= 1 %>
        <% @review.review_comments.each do |review_comment| %>
          <div class="card col mt-4">
            <div class="row card-title border-bottom">
              <div class="border-right col-lg-5 text-center pt-2">
                <%= review_comment.customer.nickname %>
              </div>

              <div class="border-right col-lg-4 text-center p-2">
                <%= review_comment.created_at.strftime("%Y_%m/%d_%H:%M") %>
              </div>

              <%= link_to "コメント削除", admin_review_comment_path(review_comment.id), method: :delete, class:"btn btn-danger col","data-confirm" => "このコメントを削除しますか？" %>
            </div>

            <p class="card-tect p-1"><%= review_comment.comment %></p>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">このレビューに対するコメントはありません</p>
      <% end %>
    </div>
  </div>
</div>
