<h2 class="mt-3">レビューコメント一覧</h2>

<% if @review_comments.count >= 1 %>
  <table class="table mt-3">
    <%= render 'admin/post_comments/comment_thead' %>

    <tbody>
      <% @review_comments.each do |comment| %>
        <tr>
          <td>
            <%= link_to admin_customer_path(comment.customer_id), class:"text-dark" do %>
              <%= comment.customer.nickname.truncate(8, separator: "...") %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_review_path(comment.review_id), class:"text-dark" do %>
              <%= comment.review.title.truncate(8, separator: "...") %>
            <% end %>
          </td>
          <td><%= comment.comment %></td>
          <td>
            <%= render 'admin/post_comments/comment_score', comment: comment %>
          </td>
          <td><%= comment.created_at.strftime("%Y_%m/%d_%H:%M") %></td>
          <td><%= link_to "削除", admin_review_comment_path(comment.id), method: :delete, class:"btn btn-danger btn-sm", "data-confirm" => "このコメントを削除しますか？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h5 class="mt-3">コメントがありません</h5>
<% end %>
