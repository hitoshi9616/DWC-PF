<h2 class="mt-3">投稿コメント一覧</h2>

<% if @post_comments.count >= 1 %>
  <table class="table mt-3">
    <thead>
      <tr>
        <th>投稿者</th>
        <th>コメント先</th>
        <th>内容</th>
        <th>感情分析スコア</th>
        <th>コメント年_日_時</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @post_comments.each do |comment| %>
        <tr>
          <td><%= comment.customer.nickname %></td>
          <td>
            <%= link_to admin_post_path(comment.post_id), class:"text-dark" do %>
              <%= comment.post.title %>
            <% end %>
          </td>
          <td><%= comment.comment %></td>
          <td><%= comment.score %></td>
          <td><%= comment.created_at.strftime("%Y_%m/%d_%H:%M") %></td>
          <td><%= link_to "コメント削除", admin_post_comment_path(comment.id), method: :delete, class:"btn btn-danger btn-sm", "data-confirm" => "このコメントを削除しますか？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h5 class="mt-3">コメントがありません</h5>
<% end %>
